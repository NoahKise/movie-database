@model MovieDatabase.Models.Actor

<h2>Edit</h2>

<h4>Editing: "@Model.Name"</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ActorId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    <br />
    @Html.LabelFor(model => model.UrlImage)
    @Html.EditorFor(model => model.UrlImage)
    <br />
    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to actor list", "Index")</p>